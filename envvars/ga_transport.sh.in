export gacode_DIR=@abs_top_builddir@
export GYRO_DIR=@abs_top_builddir@/gyro
export NEO_DIR=@abs_top_builddir@/neo
export TGLF_DIR=@abs_top_builddir@/tglf
echo Prepending $gacode_dir/bin:$GYRO_DIR/bin:$NEO_DIR/bin:$TGLF_DIR/bin to your PATH.
export PATH=${PATH}:$gacode_dir/bin:$GYRO_DIR/bin:$NEO_DIR/bin:$TGLF_DIR/bin
#export IDL_PATH=$IDL_DIR/lib:$GYRO_DIR/vugyro
func() 
{
  local PYTHONADD="$gacode/shared/python $GYRO_DIR/python $NEO_DIR/python $TGLF_DIR/python"
  echo pythonadd = $PYTHONADD

  for i in $PYTHONADD; do
    local hasit=`echo $PYTHONPATH | grep $i`
    if test -z "$hasit"; then
      local ADDPYPATH=$i:$ADDPYPATH
    fi
  done

  echo Prepending $ADDPYPATH to your PYTHONPATH
  export PYTHONPATH=${ADDPYPATH}:$PYTHONPATH
}
func

