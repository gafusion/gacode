#!/bin/sh
#
# SCRIPT:
#  glf23_sim_warn
#
# FUNCTION:
#  Check for existence of sim directory
#-------------------------------------------------------------

if [ $1 = $PWD ]
  then
  echo "Error: missing simdir"
  exit 1
fi

if [ ! -d "$1" ]
  then
  echo "$1 is not a valid simulation directory."
  echo "Please create the directory first, or use [glf23 -g]."
  exit 1
fi

if [ ! -f "$1/input.glf23" ]
  then
  echo "input.glf23 not found."
  exit 1
fi

exit 0
