#!/bin/sh
# 
# SCRIPT:
#  neo_reg_do
#
# PURPOSE:
#  Run through full suite of NEO regression tests
#----------------------------------------------------

# Define list of test directories:

list="ade_c1 ade_c2 ade_c3 gke_c1 gke_c2 gke_c3 imp_c1 imp_c2 imp_c3 ade_miller rot_ade rot_ade_shear exp_miller_norot exp_miller_rot exp_geo_norot exp_geo_rot exp_geo_rot_multir fow_ade fow_exp_ade  fow_exp_imp"

echo "REGRESSION TESTING: $list"

testdir=${NEO_DIR}/sim/neoregtest
mkdir $testdir
cd $testdir

for sim in $list
do 
   neo -g $sim -p $testdir > out
   rm -rf $sim/*.out $sim/CVS
   neo -e $sim  -p $testdir > out
   neo_reg $sim $testdir
done
