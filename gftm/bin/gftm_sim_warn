#!/bin/sh
#
# SCRIPT:
#  gftm_sim_warn
#
# FUNCTION:
#  Check for existence of sim directory
#-------------------------------------------------------------

if [ $1 = $PWD ]
  then
  echo "Error: missing simdir"
  exit 1
fi

if [ ! -d "$1" ]
  then
  echo "$1 is not a valid simulation directory."
  echo "Please create the directory first, or use [gftm -g]."
  exit 1
fi

if [ ! -f "$1/input.gftm" ]
  then
  echo "input.gftm not found."
  exit 1
fi

exit 0
