AC_CONFIG_COMMANDS(depend,
  [echo Touching .depend in the subdirs, $depdirs.;
  for i in $depdirs; do
  mkdir -p $i;
  touch $i/.depend; done],
  [depdirs="$DEPDIRS"]
)

