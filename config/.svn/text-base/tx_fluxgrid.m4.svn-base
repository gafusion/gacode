AC_ARG_WITH(fluxgrid,
    AC_HELP_STRING([--with-fluxgrid=<top level dir>],
	[to specify the location of fluxgrid
	 (you must specify the top level directory)]),
    FLUXGRID="$withval")

# echo SUPRA_SEARCH_PATH=$SUPRA_SEARCH_PATH
if test -n "$FLUXGRID"; then
  FLUXGRID_PATH=`dirname $FLUXGRID`
fi

for i in `echo $SUPRA_SEARCH_PATH | tr ':' ' '`; do
  FLUXGRID_PATH="$FLUXGRID_PATH:$i/fluxgrid/bin"
done
# echo FLUXGRID_PATH=$FLUXGRID_PATH
AC_PATH_PROGS(FLUXGRID, "fluxgrid" , "", $FLUXGRID_PATH)

echo  >> $config_summary_file
echo "Fluxgrid executable:  " >> $config_summary_file
TX_PRINT_VAR(FLUXGRID)

