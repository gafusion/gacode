dnl ######################################################################
dnl
dnl find the location of the png installation
dnl
dnl ######################################################################

if false; then
TX_LOCATE_PKG(
  [png],
  [$PNG_PATH],
  [qapplication.h],
  [png],
  [qt/include/Qt],
  [lib])
fi

AC_MSG_CHECKING(for png includes, libs)
AC_PATH_PROGS(LIBPNG_CONFIG, libpng-config)
if test -n "$LIBPNG_CONFIG"; then
  PNG_INC=`libpng-config --I_opts`
  PNG_LIBS=`libpng-config --libs`
  AC_MSG_RESULT($PNG_INC, $PNG_LIBS)
  echo >> $config_summary_file
  echo Using png with: >> $config_summary_file
  TX_PRINT_VAR(PNG_INC)
  TX_PRINT_VAR(PNG_LIBS)
else
  AC_MSG_WARN(libpng-config not found.)
fi
AM_CONDITIONAL(HAVE_PNG, test -n "$PNG_LIBS")


