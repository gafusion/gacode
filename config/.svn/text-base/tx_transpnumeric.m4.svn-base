dnl ######################################################################
dnl
dnl File:	tx_transplibs.m4
dnl
dnl Purpose:	Find the transpnumeric library 
dnl               which is used for python spline interpolation
dnl
dnl Version: $Id$
dnl
dnl Tech-X configure system
dnl
dnl ######################################################################

unset TRANSPNUMERIC_INC
unset TRANSPNUMERIC_LIBS
unset TRANSPNUMERIC_RPLIBS
unset FOUND_TRANSPNUMERIC

dnl-----------------------------------------------------------------------
dnl Find transpnumeric
dnl-----------------------------------------------------------------------

AC_ARG_WITH(transpnumeric-dir, AC_HELP_STRING([--with-transpnumeric-dir],
        [transpnumeric installation directory]),
        TRANSPNUMERIC_DIR="$withval")
TRANSPNUMERIC_PATH=$TRANSPNUMERIC_DIR
TRANSPNUMERIC_SP=$SUPRA_SEARCH_PATH
if test "$back_end_node" = yes -o "$parallel" = yes; then
  for i in `echo $TRANSPNUMERIC_SP | tr ':' ' '`; do
    TRANSPNUMERIC_PATH="$TRANSPNUMERIC_PATH:$i/transpnumeric-ben"
  done
fi
for i in `echo $TRANSPNUMERIC_SP | tr ':' ' '`; do
  TRANSPNUMERIC_PATH="$TRANSPNUMERIC_PATH:$i/transpnumeric"
done
TX_LOCATE_PKG(
  [TRANSPNUMERIC],
  [$TRANSPNUMERIC_PATH],
  [-],
  [TranspNumeric])
if test "$FOUND_TRANSPNUMERIC" = "no"; then
   AC_MSG_WARN(transpnumeric library not found. Use --with-transpnumeric-lib-transpnumeric=<lib> to set library or --with-transpnumeric-dir=<dir> to set search directory.)
fi


