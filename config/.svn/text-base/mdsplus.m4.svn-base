MDSPLUS_SP=$HOME:$HOME/$UNIXFLAVOR:$HOME/software:$SUPRA_SEARCH_PATH
unset MDSPLUS_PATH
for i in `echo $MDSPLUS_SP | tr ':' ' '`; do
  MDSPLUS_PATH="$MDSPLUS_PATH:$i/mdsplus"
done
TX_LOCATE_PKG(
  [MDSPLUS],
  [$MDSPLUS_PATH],
  [transperror.h],
  [portlib])

if test "$FOUND_MDSPLUS" = "no"; then
   AC_MSG_WARN(mdsplus library not found. Use --with-mdsplus-lib-mdsplus=<lib> to set library, or --with-mdsplus-dir=<dir> to set search directory.)
fi

