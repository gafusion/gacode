#!/usr/bin/env python

import sys
import os
import string
import gyro_util
import tglf_dict

# TGLF dictionary
loc_dict=tglf_dict.inputdict()

# TGLF dictionary order
loc_ord=tglf_dict.inputdict_order()

# TGLF deprecated parameters
loc_dep=tglf_dict.oldinputdict()

#----------------------------------------------

# Derive INPUT.gen and INPUT.log from INPUT (sys.argv[1])
error = gyro_util.input_parse(loc_dict,loc_ord,sys.argv[1],'INPUT.gen','INPUT.log')

# Determine if any deprecated parameters exist
gyro_util.find_deprecated(loc_dep,sys.argv[1])

if error == 1:
    f=open('halt','w')
    f.write("1")

