include ${GACODE_ROOT}/shared/install/make.inc.${GACODE_PLATFORM}

ifeq ($(OPT),debug)
   FFLAGS=${FDEBUG}
else
   FFLAGS=${FOPT}
endif

LLIB=../libs/xptor_lib

OBJECTS = ave_fields.o \
	  average7_2d.o \
          calc_stats.o \
          delay.o \
          derivedexpprofiles.o \
          derivedmodlocal.o \
          derivedmodlocal_ptor.o \
          derivedmodprofiles.o \
          filter_dv.o \
          gridsmooth.o \
          init.o \
          ptorupdate.o \
          setup.o \
          timeprofiles_dv.o \
          timeprofiles.o \
          timeprofiles_replace.o \
	  tpedscale.o \
          transfer_exp.o \
          update_src.o \
          write_ascii.o \
          write_ufile.o \
          write_netcdf.o \
          write_glf.o

.SUFFIXES : .o .f .F


lib: $(OBJECTS)
	$(ARCH) $(LLIB).a $(OBJECTS) 

.f.o :
	$(FC) $(FMATH) $(FFLAGS) -c $<

write_netcdf.o:	write_netcdf.f
	$(FC) $(FMATH) $(FFLAGS)  -I $(NETCDF_INC) -c $<

.F.o :
	$(FC) -c $(FMATH) $(FFLAGS) $(SPECIAL) $<

clean:
	rm -f *.o $(LLIB).a
