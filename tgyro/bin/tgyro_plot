#!/bin/bash
#==============================================================================
# tgyro_plot
#
# PURPOSE:
#  Plotting/listing routines for TGYRO output.
#==============================================================================

#==============================================================================
# Syntax validity check and help message
#
n=$#

if [ $n -eq 0 ]
then
  echo
  echo "Usage:    tgyro_plot [options]"
  echo
  echo "          -p <path>"
  echo "          Set optional path to simulation directory."
  echo "          [The default path is the current directory]"
  echo
  echo "          -e <simdir>"
  echo "          Use data in <simdir>."
  echo 
  echo "          -f <filetype>"
  echo "          Output file type."
  echo "           <filetype>=emf, eps, pdf, png, ps, raw, rgba, svg, svgz"
  echo 
  echo "          -field <value>"
  echo "          Specify field to be plotted: [0,n_field-1]."
  echo "          Alternatively, specifying 's' returns a sum of all fields (default=s)."
  echo
  echo "          -kinetic <value>"
  echo "          Specify species to be plotted: [0,n_kinetic-1]."
  echo
  echo "          -moment <value>"
  echo "          Specify moment to be plotted: [0,3] (default=1)"
  echo
  echo "          -plot <type>"
  echo "          Generate plot of given type."
  echo "          If this keyword is omitted, data will be listed to the screen."
  echo "           <type> = flux_tot,"
  echo
  echo "Example:"
  echo
  echo "   tgyro_plot -e . -plot flux_tot"

  exit 1
fi
#==============================================================================

#==============================================================================
# Define variables for flag capture
#
# Default simulation directory
LOCDIR=.
SIMROOT=$PWD
PLOT_TYPE=
DIFF_FLAG=0
I_KINETIC=0
I_FIELD="s"
I_MOMENT=0
FTYPE=screen
#==============================================================================

#==============================================================================
# Parse command line options
#
while [ $# -gt 0 ] ; do
  case "$1" in

  -plot) shift ; PLOT_TYPE=$1 ;;
  
  -e) shift ; LOCDIR=$1 ;;

  -p) shift ; SIMROOT=$1 ;;

  -kinetic) shift ; I_KINETIC=$1 ;;

  -field) shift ; I_FIELD=$1 ;;

  -moment) shift ; I_MOMENT=$1 ;;

  -f) shift ; FTYPE=$1 ;;

  *) echo "ERROR: incorrect tgyro_plot syntax." ; exit 1 ;;

  esac
  shift
done
#==============================================================================

if [ "$LOCDIR" == "." ]
then
   LOCDIR=`basename $PWD`
   cd .. ; SIMROOT=$PWD
fi
SIMDIR=$SIMROOT/$LOCDIR
cd $SIMDIR

PYROOT=$GACODE_ROOT/shared/python/pyrats/tgyro

#==============================================================================
# Display diff if -ldiff set, then exit.
#
case "$PLOT_TYPE" in

   flux_tot)  
	python $PYROOT/flux_tot.py $SIMDIR $FTYPE & ;;

esac 

exit 0
