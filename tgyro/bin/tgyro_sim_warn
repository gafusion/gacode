#!/bin/sh
#
# SCRIPT:
#  tgyro_sim_warn
#
# FUNCTION:
#  Check for proper structure of tgyro sim directory
#---------------------------------------------------------

if [ ! -d "$1" ]
  then
  echo "ERROR: $1 is not a valid simulation directory."
  exit 1
fi

if [ ! -f "$1/input.tgyro" ]
  then
  echo "ERROR: input.tgyro not found in $1"
  exit 1
fi

exit 0
