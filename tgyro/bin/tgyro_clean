#!/bin/bash
 
n=$#

if [ $n -eq 0 ]
then
   echo "Usage: tgyro_clean -l  (remove large GYRO/TGYRO runtime files)"
   echo "Usage: tgyro_clean -a  (remove all GYRO/CGYRO/TGYRO runtime files)"
   exit 1
fi

if [ "$1" == "-l" ]
then
   rm -rf */u.out */moment*.out */RE* */sd* */source* */entropy*
fi 

if [ "$1" == "-a" ]
then
   rm -f *.log halt out.* bin.* *.out *.dat batch.out batch.err *.eps
   rm -f */bin* */halt */*.gen */out* */*~
   rm -f */*ps */*.err */*.src */*.log */gyrotest_flag gyrotest_flag
fi 

