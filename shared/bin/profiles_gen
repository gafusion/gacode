#!/bin/bash
#=============================================================
# profiles_gen
#
# PURPOSE:
#  Top-level script for conversion of raw data into GYRO 
#  format (input.profiles).
#
#  Autodetected profile formats:
#   GACODE      (input.profiles)
#   ITERDB      (ASCII iterdb)
#   ITERDBNC    (netCDF iterdb)
#   SWIM        (plasmastate)
#   CORSICA     (Corsica) 
#   PFILE       (peqdsk)
#   UFILE       (ITPA profile database format)
#
#  Autodetected geometry formats:
#   GFILE       (geqdsk equilibrium data)
#   DSKGATO_OLD (old-type dskgato flux-surface data)
#   DSKGATO_NEW (new-type dskgato flux-surface data)
#============================================================= 

#=============================================================
# EXECUTABLE AND CONFIG FILE LOCATIONS:
#
# GYRO directory
GYRO_DIR=${GACODE_ROOT}/gyro
# VGEN inputs directory
VGEN_DIR=${GACODE_ROOT}/neo/tools/input/vgen
# VGEN exec directory
VGEN_EXE=${GACODE_ROOT}/neo/tools/vgen
# - profiles_gen converter executable
EXEC=${GACODE_ROOT}/shared/profiles_gen/src/prgen
# - GATO executable
GATO=${GACODE_ROOT}/gato/gato
# - OMFIT script
OMFIT_ROOT=${GACODE_ROOT}/../OMFIT
OMFIT="${OMFIT_ROOT}/src/omfit.py ${OMFIT_ROOT}/scripts/fluxSurfaceTracer.py"
# - locpargen executable
LOCPARGEN=${GACODE_ROOT}/shared/profiles_gen/locpargen/locpargen
# - exprodump executable
EXPRODUMP=${GACODE_ROOT}/shared/profiles_gen/exprotools/exprodump
# - create executable
CREATE=${GACODE_ROOT}/shared/profiles_gen/exprotools/create
# - ASTRA converter
ASTRA=${GACODE_ROOT}/shared/profiles_gen/astra/astra2gyro.py
# - ASTRA default map file
ASTRAMAP=${GACODE_ROOT}/shared/profiles_gen/astra/astra_map_gyro
#=============================================================

#=============================================================
# Syntax validity check and help message
#
n=$#

if [ $n -eq 0 ]
then
   echo "Usage:       profiles_gen [options]"
   echo 
   echo "             Autodetected profile formats:"
   echo "               GACODE      (input.profiles)"
   echo "               ITERDB      (text iterdb)"
   echo "               ITERDBNC    (netCDF iterdb)"
   echo "               SWIM        (plasmastate)"
   echo "               PFILE       (peqdsk)"
   echo "               CORSICA     (Corsica) "
   echo "               U FILE       (ITPA profile database format)"
   echo 
   echo "             Autodetected geometry formats:"
   echo "               GFILE       (geqdsk equilibrium data)"
   echo "               DSKGATO_OLD (old-type dskgato flux-surface data)"
   echo "               DSKGATO_NEW (new-type dskgato flux-surface data)"
   echo 
   echo "             -p <path>"
   echo "             Set optional path to simulation directory."
   echo "             [The default path is the current directory]"
   echo
   echo "             -e <workdir>"
   echo "             Working directory (default is present directory)"
   echo 
   echo "             -V"
   echo "             Verbose (for debugging; use this if you get an error)."
   echo 
   echo "ITERDB Options"
   echo 
   echo "             -i <data>"
   echo "             Specify text or NetCDF data file."
   echo 
   echo "             -g <gfile>"
   echo "             Merge EFIT gfile for high-precision geometry data."
   echo 
   echo "             -nfourier <gfile>"
   echo "             Number of Fourier modes to retain in input.profiles.geo/input.geo."
   echo
   echo "             -nogq"
   echo "             Do not use q from GATO (by default, if gfile is specified q is from GATO)."
   echo 
   echo "             -cer <vpol>"
   echo "             Merge data Er and velocity data from Solomon's cer datafile."
   echo 
   echo "             -ipccw <val>"
   echo "             Specify direction of current (as seen from above)"
   echo "             (1=counter-clockwise,-1=clockwise)"
   echo 
   echo "             -btccw <val>"
   echo "             Specify direction of toroidal field (as seen from above)"
   echo "             (1=counter-clockwise,-1=clockwise)"
   echo 
   echo "PLASMA STATE Options"
   echo
   echo "             -i <data>"
   echo "             Specify NetCDF data file."
   echo
   echo "             -g <gfile>"
   echo "             Merge EFIT gfile for high-precision geometry data."
   echo 
   echo "             -nfourier <gfile>"
   echo "             Number of Fourier modes to retain in input.profiles.geo/input.geo."
   echo 
   echo "             -nogq"
   echo "             Do not use q from GATO (by default, if gfile is specified q is from GATO)."
   echo 
   echo "             -r <reorder sequence>"
   echo "             Reorder ions."
   echo
   echo "CORSICA Options"
   echo
   echo "             -i <data.corsica>"
   echo "             Specify Corsica data file."
   echo
   echo "             -g <gfile>"
   echo "             GFILE (geqdsk) containing flux-surface data [required]."
   echo 
   echo "             -nfourier <gfile>"
   echo "             Number of Fourier modes to retain in input.profiles.geo/input.geo."
   echo 
   echo "             -nogq"
   echo "             Do not use q from GATO (by default, if gfile is specified q is from GATO)."
   echo 
   echo "             -r <reorder sequence>"
   echo "             Reorder ions."
   echo
   echo "UFILE Options"
   echo
   echo "             -i UFILE"
   echo "             Toggle UFILE mode."
   echo
   echo "             -t <time>"
   echo "             Time for averaging."
   echo
   echo "             -r <reorder sequence>"
   echo "             Reorder ions."
   echo
   echo
   echo "             Example: To invoke UFILE mode, ensure the *d.dat files exist in the"
   echo "                      current directory, then type:"
   echo
   echo "                       $ profiles_gen -i UFILE -t <time>"
   echo                   
   echo "                      Leaving out the -t option will print time window"
   echo
   echo "PEQDSK/PFILE Options"
   echo
   echo "             -i <PFILE>"
   echo "             Specify PFILE (peqdsk) data file."
   echo
   echo "             -g <gfile>"
   echo "             GFILE (geqdsk) containing flux-surface data [required]."
   echo 
   echo "             -nfourier <gfile>"
   echo "             Number of Fourier modes to retain in input.profiles.geo/input.geo."
   echo
   echo "ASTRA Options"
   echo
   echo "             -i <data>"
   echo "             Specify ASTRA data file."
   echo
   echo "             -m <map file>"
   echo "             Use <map file> to map Astra data to GYRO input.profiles headers"
   echo "             NOTE: uses 'astra_map_gyro' in current directory by default."
   echo
   echo "             -n <note text>"
   echo "             Include <note text> in the input.profiles header."
   echo
   echo "null Options"
   echo
   echo "             -i null"
   echo "             Toggle null profile data mode."
   echo
   echo "             -g <GFILE>"
   echo "             GFILE (geqdsk) containing flux-surface data [required]."
   echo 
   echo "             -nfourier <gfile>"
   echo "             Number of Fourier modes to retain in input.profiles.geo/input.geo."
   echo "             Default: -nfourier 24"
   echo
   echo "GATO mapper control options"
   echo 
   echo "             -gato <parameter=val,parameter=val,...>"
   echo 
   echo "             Important parameters and defaults"
   echo
   echo "              dpsidl=0.0   [DEFINE]"    
   echo "              npfit=150    [DEFINE]"   
   echo
   echo "OMFIT mapper control options"
   echo 
   echo "             -omfit"
   echo "             Toggle OMFIT mapper instead of default GATO mapper."
   echo
   echo "GFILE MERGE MODE"
   echo
   echo "             -i <data>"
   echo "             Data in input.profiles format."
   echo
   echo "             -g <GFILE>"
   echo "             GFILE (geqdsk) containing flux-surface data."
   echo 
   echo "             -nfourier <GFILE>"
   echo "             Number of Fourier modes to retain in input.profiles.geo/input.geo."
   echo
   echo "             -gmerge"
   echo "             Toggle gmerge mode."
   echo
   echo "VELOCITY GENERATION (VGEN) MODE"
   echo
   echo "             -vgen"
   echo "             Toggle vgen mode."
   echo
   echo "             -in <string of ion species> " 
   echo "             Choices: DC, DC.revip, DCD, DHCD, HDC"
   echo "             If this is blank, input.vgen must exist."
   echo "             See"
   echo "             $VGEN_DIR/input.vgen.*"
   echo "             for examples."
   echo
   echo "             -er <val>" 
   echo "             Method to compute Er."
   echo "             1=Force balance, 2=NEO (weak rot), 3=NEO (strong rot), 4=Return given"
   echo
   echo "             -vel <val>" 
   echo "             Method to compute velocities."
   echo "             1=NEO (weak rot), 2=NEO (strong rot), 3=Return given"
   echo
   echo "             -ix <index>" 
   echo "             Index of ion species to match NEO and given velocities."
   echo
   echo "             -nth <min,max>" 
   echo "             Minimum and maximum theta resolutions.  Default -nth 17,39"
   echo
   echo "LOCAL PARAMETER MODE"
   echo 
   echo "             -loc_rad <r/a>"
   echo "             Reference radius, r/a."
   echo 
   echo "             -loc_rho <rho>"
   echo "             Reference rho=sqrt[chi/chi(a)]"
   echo 
   echo "             -loc_psi <psi_N>"
   echo "             Reference psi_N=psi/psi(a)"
   echo
   echo "             -Z1 <ion1 charge>"
   echo "             Default: 1 (Hydrogen isotope)"
   echo "             -Z2 <ion2 charge>"
   echo "             Default: 6 (Carbon)"
   echo "             -Z3 <ion3 charge>"
   echo "             Default: 2 (Helium)"
   echo "             -Z4 <ion4 charge>"
   echo "             Default: 1 (Hydrogen isotope)"
   echo "             -Z5 <ion5 charge>"
   echo "             Default: 1 (Hydrogen isotope)"
   echo
   echo "DUMP MODE"
   echo 
   echo "             -dump <EXPRO variable>"
   echo "             Dump any variable in EXPRO interface."
   echo
   echo "             -dump list"
   echo "             Print list of available variables."
   echo
   echo "             -x <arg>"
   echo "              <arg>=none: omit independent variable column."
   echo "              <arg>=r:    r/a is first column."
   echo "              <arg>=rho:  rho=sqrt[chi/chi(a)] is first column. [DEFAULT]"
   echo "              <arg>=psi:  psi_N=psi/psi(a) is first column."
   echo
   echo "      NOTE: control ion charges with Z1,Z2,Z3,Z4,Z5 as in LOCAL PARAMETER MODE."
   echo
   echo "PROFILE CREATE MODE"
   echo 
   echo "             -create"
   echo "              Make input.profiles using parameters in input.create"
   echo 
   echo "             -createhelp"
   echo "              Print detailed help information"
   echo
   echo "             -i <input.profiles file>"
   echo "              Specify a file to modify.  If unspecified, generate from scratch."
   echo
   echo
   echo "EXAMPLES:"
   echo " "
   echo
   echo "(1) Typical usage for DIII-D plasmas with iterdbfile only (2 steps)"
   echo "    NEO will generate Er and all velocities:"
   echo 
   echo "    profiles_gen -i iterdb -g gfile"
   echo "    profiles_gen -vgen -i input.profiles -er 2 -vel 1 -in DC -ix 2"
   echo
   echo "(2) Typical usage for DIII-D plasmas with CER file available (2 steps)"
   echo "    NEO will take Er from CER file and generate all velocities:"
   echo 
   echo "    profiles_gen -i iterdb -g gfile -cer cerfile"
   echo "    profiles_gen -vgen -i input.profiles -er 4 -vel 2 -in DC -ix 2"
   echo 

   exit 1
fi
#=============================================================

#=============================================================
# Define DEFAULT variables for flag capture
#
# working root 
SIMROOT=$PWD

CONFIG=.config

FILE_FLAG=0
G_FLAG=0
VERBOSE_FLAG=0
ORDER_FLAG=0
GMERGE_FLAG=0

IPCCW=1
BTCCW=-1
NFOURIER=24

# GATO variables
NOGQ_FLAG=0
GATO_ARGS=

# OMFIT mapper variables
OMFIT_FLAG=0

# CER file 
CER_FILE=null

# VGEN mode variables
VGEN_IN=null
VGEN_ER=1
VGEN_VEL=2
VGEN_IX=2
VGEN_NTH=17,39
VGEN_FLAG=0

# UFILE 
UFILETIME=null

# LOCAL PARAMETER MODE variables
LOC_RAD=0
LOC_RHO=0
LOC_PSI=0
Z1=1.0
Z2=6.0
Z3=2.0
Z4=1.0
Z5=1.0

# DUMP MODE variables
DUMP_FLAG=0
DUMP_VAR=null
X=rho
DUMP_DENS_METHOD=1

# CREATE MODE variables
CREATE_FLAG=0
CREATEHELP_FLAG=0

# Plotting in locpargen
PLOT_FLAG=0

#=============================================================

#=============================================================
# Default ion order vector
#
ord_vec[0]=1
ord_vec[1]=2
ord_vec[2]=3
ord_vec[3]=4
ord_vec[4]=5
#=============================================================
 
#=============================================================
# Parse command line options
#
while [ $# -gt 0 ] ; do
  case "$1" in 

  -p) shift ; SIMROOT=$1 ;;

  -e) shift ; LOCDIR=$1 ;;

  -i) shift ; FILE_FLAG=1 ; FILE="$1" ;;

  -m) shift ; ASTRA_ARG="$ASTRA_ARG -m $1" ;;

  -n) shift ; ASTRA_ARG="$ASTRA_ARG -n $1" ;;

  -cer) shift ; 
        echo "INFO: (profiles_gen) Will merge data from $CER_FILE" ; CER_FILE="$1" ;;
   
  -ipccw) shift ; IPCCW="$1" ;;
  -btccw) shift ; BTCCW="$1" ;;

  -g) shift ; G_FLAG=1 ; GFILE="$1" ;;

  -nfourier) shift ; NFOURIER=$1 ;;

  -gato) shift ; GATO_ARGS="$1" ;;

  -omfit) OMFIT_FLAG=1 ;;

  -V) VERBOSE_FLAG=1 ;;

  -nogq) NOGQ_FLAG=1 ;;

  -r) shift ; ORDER="$1" ; ORDER_FLAG=1 ;;

  -vgen) VGEN_FLAG=1 ;;

  -in) shift ; VGEN_IN=$1 ;;

  -er) shift ; VGEN_ER=$1 ;;

  -vel) shift ; VGEN_VEL=$1 ;;

  -ix) shift ; VGEN_IX=$1 ;;

  -nth) shift ; VGEN_NTH=$1 ;;

  -t) shift ; UFILETIME="$1" ;;
  
  -create) CREATE_FLAG=1 ;;
  -createhelp) CREATEHELP_FLAG=1 ;;
   
  -Z1) shift ; Z1=$1 ;;  
  
  -Z2) shift ; Z2=$1 ;;  
  
  -Z3) shift ; Z3=$1 ;;  
  
  -Z4) shift ; Z4=$1 ;;  
  
  -Z5) shift ; Z5=$1 ;; 

  -loc_rad) shift ; LOC_RAD=$1 ;;
  -loc_rho) shift ; LOC_RHO=$1 ;;
  -loc_psi) shift ; LOC_PSI=$1 ;;

  -dump) shift ; DUMP_FLAG=1 ; DUMP_VAR=$1 ;;
  -x) shift ; X=$1 ;;
  -dens) shift ; DUMP_DENS_METHOD=$1 ;; 

  -gmerge) GMERGE_FLAG=1 ;;  

  -plot) PLOT_FLAG=1 ;;  
  
  esac
  shift
done
#=============================================================

#=============================================================
# Construct simulation directory: $SIMDIR
#
if [ "$LOCDIR" == "." ]
then
   LOCDIR=`basename $PWD`
   cd .. ; SIMROOT=$PWD
fi
SIMDIR=$SIMROOT/$LOCDIR

cd $SIMDIR
#=============================================================

#=============================================================
# Manage CREATE MODE
#
# -> move original inputfile to inputfile.save
# -> save result in $FILE
#
if [ $CREATEHELP_FLAG -eq 1 ]
then
   cat $GACODE_ROOT/shared/profiles_gen/exprotools/README.HELP
   exit 0
fi

if [ $CREATE_FLAG -eq 1 ]
then
   if [ $FILE_FLAG -eq 1 ]
   then
      mv $FILE $FILE.save
      cp $FILE.save input.profiles
      echo "INFO: (profiles_gen) Keeping backup of $FILE in $FILE.save"
      python $GACODE_ROOT/shared/bin/profile_parse.py $FILE
      echo "INFO: (profiles_gen) Modifying $FILE."
   else
      rm -f input.profiles input.profiles.gen
      FILE=input.profiles
      echo "INFO: (profiles_gen) Creating $FILE."
   fi
   # Run create
   touch input.create
   python $GACODE_ROOT/shared/bin/create_parse.py input.create
   $CREATE
   # Map output files
   mv input.profiles.create $FILE 
   if [ $VERBOSE_FLAG -eq 0 ]
   then
      rm -f *.gen out.expro.run
   fi
   exit 0 
fi
#=============================================================

#=============================================================
# Filetype detection and management
#
if [ "$FILE" == "" ] ; then
   echo "ERROR: (profiles_gen) Specify an input file via -i."
   exit 1
fi

itype=`gacode_type_autodetect $FILE`

if [ "$itype" == "NOT_FOUND" ] ; then
   echo "ERROR: (profiles_gen) $FILE not found."
   exit 1
fi
if [ "$itype" == "UNKNOWN" ] ; then
   echo "ERROR: (profiles_gen) $FILE is an unknown type."
   exit 1 
fi

if [ $G_FLAG -eq 1 ] ; then

   gtype=`gacode_type_autodetect $GFILE`
   echo "INFO: (profiles_gen) $GFILE is autodetected as $gtype."

else

   gtype=none
   if [ "$itype" == "PFILE" ] ; then
      echo "ERROR: (profiles_gen) A GFILE (-g) must be used with a PFILE."  
      exit 1
   fi
   if [ "$itype" == "CORSICA" ] ; then
      echo "ERROR: (profiles_gen) A GFILE (-g) must be used with a CORSICA file."  
      exit 1
   fi

fi
#=============================================================

#=============================================================
# Managing input file (also catches UFILE mode)

if [ "$itype" == "UFILE" ] ; then

   #-----------------------------------------------
   # UFILE mode
   #-----------------------------------------------

   echo "INFO: (profiles_gen) Extracting UFILE com data."
   python ${GACODE_ROOT}/shared/bin/gacode_ufile_tool.py *com.dat $UFILETIME > out.ufile.log
   echo "INFO: (profiles_gen) Extracting and averaging UFILE 1d data."
   python ${GACODE_ROOT}/shared/bin/gacode_ufile_tool.py *1d.dat $UFILETIME >> out.ufile.log
   echo "INFO: (profiles_gen) Extracting and averaging UFILE 2d data."
   python ${GACODE_ROOT}/shared/bin/gacode_ufile_tool.py *2d.dat $UFILETIME >> out.ufile.log
   if [ "$UFILETIME" == "null" ]
   then
      cat out.ufile.log
      exit 1
   fi

elif [ "$itype" == "null" ] ; then

   # gfile-only mode
   echo "INFO: (profiles_gen) Parsing GFILE only."

else

   echo "INFO: (profiles_gen) $FILE is autodetected as $itype."

fi

#=============================================================
# Trap a p-file and split into components 
#
if [ "$itype" == "PFILE" ] ; then
   # Now, strip pfile into parts.  Rename $FILE so pfile detected in prgen.
   rm -f pfile.*
   python $GACODE_ROOT/shared/bin/gacode_pfile_tool.py $FILE
fi
#=============================================================

#=============================================================
# Manage execution of dump
if  [ $DUMP_FLAG -eq 1 ]
then
  if [ ! -f $EXPRODUMP ]
  then
     echo "ERROR: (profiles_gen) You need to build the exprodump executable."
     exit 1
  fi
  python $GACODE_ROOT/shared/bin/profile_parse.py $FILE
  if [ "$DUMP_VAR" == "" ]
  then
     DUMP_VAR=list
  fi
  echo $DUMP_VAR > input.exprodump
  echo $X >> input.exprodump
  echo $Z1 >> input.exprodump
  echo $Z2 >> input.exprodump
  echo $Z3 >> input.exprodump
  echo $Z4 >> input.exprodump
  echo $Z5 >> input.exprodump
  echo $DUMP_DENS_METHOD >> input.exprodump
  echo "INFO: (profiles_gen) Calling $EXPRODUMP"
  $EXPRODUMP
  rm input.exprodump
  exit 0
fi   
#=============================================================

#=============================================================
# Manage execution of locpargen

if [ "$LOC_RAD" != "0" ] || [ "$LOC_RHO" != "0" ] || [ "$LOC_PSI" != "0" ]
then
  if [ ! -f $LOCPARGEN ]
  then
     echo "ERROR: (profiles_gen) You need to build the locpargen executable."
     exit 1
  fi
  python $GACODE_ROOT/shared/bin/profile_parse.py $FILE
  cp $FILE.gen temp
  mv temp input.profiles.gen
  echo $LOC_RAD > input.locpargen
  echo $LOC_RHO >> input.locpargen
  echo $LOC_PSI >> input.locpargen
  echo $Z1 >> input.locpargen
  echo $Z2 >> input.locpargen
  echo $Z3 >> input.locpargen
  echo $Z4 >> input.locpargen
  echo $Z5 >> input.locpargen
  $LOCPARGEN
  rm input.locpargen
  if [ $PLOT_FLAG -eq 1 ]
  then
     python $GACODE_ROOT/shared/bin/locpargen_plot.py
  fi 
  exit 0
fi   
#=============================================================

#=============================================================
# Manage execution of vgen
#
if [ $VGEN_FLAG -eq 1 ]
then

   NEO_DIR=$GACODE_ROOT/neo

   # Create vgen work directory

   rm -rf vgen
   mkdir vgen
   cd vgen

   # Check for input.vgen file

   if [ -f $VGEN_DIR/input.vgen.$VGEN_IN ]
   then
     cp $VGEN_DIR/input.vgen.$VGEN_IN input.neo
   else 
      if [ -f ../input.vgen ]
      then
         cp ../input.vgen input.neo
      else
         echo "ERROR: (profiles_gen) Specify ion string with -vgen_in, or create input.vgen"
         exit 1
      fi
   fi

   # Tell NEO that its being run in subroutine mode by vgen.
   echo "SUBROUTINE_FLAG=1" >> input.neo 

   cp ../$FILE input.profiles
   if [ -f "../$FILE.geo" ]
       then
       cp ../$FILE.geo input.profiles.geo
   else
       echo "WARNING: (profiles_gen) $FILE.geo not found."
       echo "         This may cause VGEN to fail if input.neo uses numerical eq."
   fi

   python $NEO_DIR/bin/neo_parse.py
   python $GACODE_ROOT/shared/bin/profile_parse.py input.profiles 

   # Construct vgen.dat
   echo "$VGEN_ER"   > vgen.dat
   echo "$VGEN_VEL"  >> vgen.dat
   echo "$VGEN_IX"   >>  vgen.dat
   # Strip to obtain nmin,nmax
   p=0
   for i in $(echo $VGEN_NTH | tr "," "\n")
   do
      p=$(($p+1))
      echo $i >> vgen.dat
   done
   if [ $p -eq 1 ] 
   then
      echo $i >> vgen.dat
   fi

   # Call vgen
   #echo `pwd`
   #echo `ls $VGEN_EXE/vgen`
   $VGEN_EXE/vgen

   if [ -f "input.profiles.new" ]
   then
       mv input.profiles.new input.profiles
       echo "INFO: (profiles_gen) VGEN created vgen/input.profiles, vgen/input.profiles.extra"
   fi

   exit 0
fi
#=============================================================

#=============================================================
# Manage execution of gmerge
#
if [ $GMERGE_FLAG -eq 1 ] 
then
   rm -f input.profiles.gen
   python $GACODE_ROOT/shared/bin/profile_parse.py $FILE      
   if [ "$FILE" != "input.profiles" ] ; then
      mv $FILE.gen input.profiles.gen
   fi
   a=`grep IONS $FILE`
   CER_FILE=${a:25} 
   a=`grep INPUT $FILE`
   FILE=${a:25}
fi   
#=============================================================

#=============================================================
# If we make it here, its time for cleanup
#
echo "INFO: (profiles_gen) Removing old input.profiles* files"
rm -f input.profiles input.profiles.geo input.profiles.extra
#=============================================================

#=============================================================
# Jump to ASTRA parsing if *.astra is specified
# 
if [ "${FILE: -6}" == ".astra" ] 
then
   # Only last occurrence of "-m" option is used
   $ASTRA -o input.profiles -m $ASTRAMAP $ASTRA_ARG $FILE
   exit
fi
#=============================================================

#=============================================================
# Check for executable
#
if [ ! -f $EXEC ] ; then
   echo "ERROR: (profiles_gen) Did not find executable $EXEC."
   exit 1
fi
#=============================================================

#=============================================================
# Construct prgen input file ($CONFIG)
#
# Determine method to extract flux surfaces
# EFIT method:
#  1=none, 2=GATO-gfile, 3=OMFIT-gfile, 4=DSKGATO_OLD, 5=DSKGATO_NEW
#
if [[ "$gtype" == DSKGATO_OLD ]] ; then
   EFIT_METHOD=4
elif [[ "$gtype" == DSKGATO_NEW ]] ; then
   EFIT_METHOD=5
else
   EFIT_METHOD=$(($G_FLAG+$OMFIT_FLAG+1))
fi
#=============================================================

#=============================================================
# Construct prgen input file ($CONFIG)
date > $CONFIG

# Required data file (ITERDB, PLASMASTATE, etc)
echo $FILE >> $CONFIG
echo $itype >> $CONFIG

# Optional CER file
echo $CER_FILE >> $CONFIG

# EFIT method 
echo $EFIT_METHOD >> $CONFIG

# Don't use gato q (-nogq) flag
echo $NOGQ_FLAG >> $CONFIG

# Verbosity
echo $VERBOSE_FLAG >> $CONFIG

# GFILE MERGE
echo $GMERGE_FLAG >> $CONFIG

# FIELD ORIENTATION
echo $IPCCW >> $CONFIG
echo $BTCCW >> $CONFIG

# Fourier modes
echo $NFOURIER >> $CONFIG

# NOTE: reorder flags will be appended later.
#=============================================================

#==============================================================
# Manage equilibrium (run GATO, OMFIT, etc) here
#

# Use GATO:
if [ $EFIT_METHOD -eq 2 ]
then
   if [ ! -f $GATO ]
   then
      echo "ERROR: (profiles_gen) You need to build the GATO executable: $ cd gato ; make"
      exit 1
   fi
   echo "INFO: (profiles_gen) Spawning GATO mapper to generate flux surfaces from $GFILE."

   # GATO requires gfile as "eqgta"
   cp $GFILE eqgta

   # Clear any stale error files
   rm -f gato_error

   # Create entire GATO "ingta" namelist
   echo "GATO template" > ingta
   echo "129x129 200x400  ncase=0" >> ingta
   echo "n  = 1  ncorr=+1  Wall on the Plasma" >> ingta
   echo " &inputd" >> ingta
   echo " ntor     = 1" >> ingta
   echo " ncase    = 0" >> ingta
   echo " norm     = 0" >> ingta
   echo " nmap     = 0" >> ingta
   echo " neqtyp   = 0" >> ingta
   echo " jpsi     = 100" >> ingta
   echo " itht     = 200" >> ingta
   echo " isym     = 0" >> ingta
   echo " igrid    = 0" >> ingta
   echo " ncorr    = +1" >> ingta
   echo " corrfac  = 1.0000" >> ingta
   echo " nmesh    = 2" >> ingta
   echo " nedge    = +4" >> ingta
   echo " sedg0    = 0.0" >> ingta
   echo " sedg1    = 0.0" >> ingta
   echo " maptrace = 0" >> ingta
   echo " npak     = 0" >> ingta
   echo " nrat     = 0" >> ingta
   echo " nppack   = 0" >> ingta
   echo " nqpack   = 0" >> ingta
   echo " pkfrac   = 0.3333333333333333" >> ingta
   echo " qpfrac   = 0.3333333333333333" >> ingta
   echo " cspak    = 0.5" >> ingta
   echo " npfit    = 150" >> ingta
   echo " dpsisl   = 0.0" >> ingta
   echo " dpsisd   = +0.10e-04" >> ingta
   echo " psipak   = 1.0" >> ingta
   echo " delac    = 0.10e-02" >> ingta
   echo " tolspln  = 0.10e-02" >> ingta
   echo " ntrymx   = 10" >> ingta
   echo " nccellr  = +1" >> ingta
   echo " nqaxis   =  0" >> ingta
   echo " qxin     = 0.0" >> ingta
   echo " idnsty   = 0" >> ingta
   echo " ifastp   = 0" >> ingta
   echo " ndnxp0   = 0" >> ingta
   echo " ndnxp1   = 2" >> ingta
   echo " ndnxp2   = 2" >> ingta
   echo " iwal     = 0" >> ingta
   echo " nwall    = 60" >> ingta
   echo " irext    = 0" >> ingta
   echo " rext     = 1.000" >> ingta
   echo " nrestrt  = 0" >> ingta
   echo " ndsktim  = +1" >> ingta
   echo " nev      = 1" >> ingta
   echo " nreslv   = 0" >> ingta
   echo " nbrmax   = 10" >> ingta
   echo " nismax   = 10" >> ingta
   echo " ncymax   = 1" >> ingta
   echo " nitmax   = 20" >> ingta
   echo " ncyfin   = 1" >> ingta
   echo " al0      = -0.100000e-04" >> ingta
   echo " dal0     = 10.0" >> ingta
   echo " al0bas   = +0.00" >> ingta
   echo " al0min   = -0.10e+00" >> ingta
   echo " al0max   = -0.10e-11" >> ingta
   echo " epschy   = 0.00001" >> ingta
   echo " epscon   = 0.00001" >> ingta
   echo " njplot   = +200" >> ingta
   echo " niplot   = 1" >> ingta
   echo " nskpi    = +2" >> ingta
   echo " nskpj    = +2" >> ingta
   echo " ncont    = 10" >> ingta
   echo " ncplot   = 10" >> ingta
   echo " nxisgn   = +1" >> ingta
   echo " nxuplt   = +3" >> ingta
   echo " nxiplt   = +1" >> ingta
   echo " nxrplt   =  0" >> ingta
   echo " nxpplt   =  0" >> ingta
   echo " nbuplt   = +1" >> ingta
   echo " nbiplt   = +1" >> ingta
   echo " nbrplt   =  0" >> ingta
   echo " nbpplt   =  0" >> ingta
   echo " nauplt   = +1" >> ingta
   echo " naiplt   = +1" >> ingta
   echo " narplt   =  0" >> ingta
   echo " napplt   =  0" >> ingta
   echo " ntphase  = -4" >> ingta
   echo " mshpsi   = 12" >> ingta
   echo " mshchi   = 3" >> ingta
   echo " nvfft    = 0" >> ingta
   echo " iplotm   = +10" >> ingta
   echo " ioutm    = 1" >> ingta
   echo " ioutw    = 1" >> ingta
   echo " ioute    = 0" >> ingta
   echo " ioutp    = +19" >> ingta
   echo " iomshp   = -2" >> ingta
   echo " ioeqlp   = -2" >> ingta
   echo " ioeigp   = +2" >> ingta
   echo " iodlbp   = +2" >> ingta
   echo " iodlap   = +2" >> ingta
   echo " iopsip   = -2" >> ingta
   echo " iolinp   = +2" >> ingta
   echo " iolnbp   = +2" >> ingta
   echo " iolnap   = +2" >> ingta
   echo " iofftp   = +2" >> ingta
   echo " ioffbp   = -2" >> ingta
   echo " ioffap   = -2" >> ingta
   echo " ioconp   = -2" >> ingta
   echo " iodlbp   = -2" >> ingta
   echo " iodlap   = -2" >> ingta
   echo " iodlwp   = +2" >> ingta
   p=0
   for i in $(echo $GATO_ARGS | tr "," "\n")
   do
      echo "$i" >> ingta
      p=$(($p+1))
   done
   echo " &end" >> ingta

   $GATO >& out.gato.stdout
   if [ -f 'gato_error' ]
   then
      echo 'ERROR: (gato) Fatal error.'
      exit 1 
   else
      echo 'INFO: (gato) Success.'
   fi
fi

# Use OMFIT:
if [ $EFIT_METHOD -eq 3 ]
then
   cp $GFILE gfile
   python $OMFIT -l 128 -u 128 -r 0.001 gfile ffile >& out.omfit
fi

# DSKGATO
if [[ $EFIT_METHOD -eq 4 || $EFIT_METHOD -eq 5 ]]
then
   cp $GFILE grid.dat
fi
#==============================================================

#==============================================================
# Ion reordering: reset ion order if "-r" option present
#
if [ $ORDER_FLAG -eq 1 ]
then
   if [ ${#ORDER} -lt 8 ]
   then
      echo "ERROR: (profiles_gen) Incomplete order vector."
      exit 1;
   fi

   p=0
   for i in $(echo $ORDER | tr "," "\n")
   do
      ord_vec[$p]=$i
      p=$(($p+1))
   done
fi

echo ${ord_vec[0]} ${ord_vec[1]} ${ord_vec[2]} ${ord_vec[3]} ${ord_vec[4]} >> $CONFIG
#==============================================================

#==============================================================
# MAIN: Run prgen here
#
$EXEC

if [ -f "success" ] ; then
   echo "INFO: (profiles_gen) Done."
else
   echo "ERROR: (profiles_gen) *Failed*. Try running with -V option"
fi
#==============================================================

#==============================================================
# Final cleanup:
#
#  Remove configuration files, output files, etc.
rm -f egta eqgta nova.*
#  Remove stale files
rm -f out.gato.* input.gato.* out.omfit dummy.peq

if [ $VERBOSE_FLAG -eq 0 ]
then
   rm -f $CONFIG fluxfit.* ingta o1gta grid.dat success
   rm -f *.ave out.com out.dim out.ufile.log 
   rm -f gfile ffile out.expro.run pfile.*
else
   if [ -f "ingta" ] ; then 
      mv ingta input.gato.ingta
   fi
   if [ -f "o1gta" ] ; then
      mv o1gta out.gato.o1gta
   fi
   if [ -f "grid.dat" ] ; then
      mv grid.dat out.gato.grid
   fi
   if [ -f "ffile" ] ; then
      mv ffile out.omfit.mapper
   fi
fi
#==============================================================

cd $SIMROOT
